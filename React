import React, { useState } from 'react';

export default function CreateWallet() {
  const [userId, setUserId] = useState('');
  const [wallet, setWallet] = useState(null);

  const handleCreate = () => {
    const newWallet = {
      address: 'GXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX',
      user: userId,
      timestamp: Date.now()
    };
    setWallet(newWallet);
  };

  return (
    <div style={{ padding: 20 }}>
      <h2>إنشاء محفظة رمزية</h2>
      <input
        type="text"
        placeholder="أدخل معرف الهوية"
        value={userId}
        onChange={(e) => setUserId(e.target.value)}
      />
      <button onClick={handleCreate}>إنشاء</button>

      {wallet && (
        <div style={{ marginTop: 20 }}>
          <p><strong>المستخدم:</strong> {wallet.user}</p>
          <p><strong>العنوان:</strong> {wallet.address}</p>
          <p><strong>الوقت:</strong> {new Date(wallet.timestamp).toLocaleString()}</p>
        </div>
      )}
    </div>
  );
}
